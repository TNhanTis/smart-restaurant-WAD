# Database connection string - Get from Supabase Project Settings â†’ Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres

# Server port
PORT=3000

# Environment
NODE_ENV=development

# JWT Secret - Generate a secure random string (32+ characters)
# Use: https://passwordsgenerator.net/ or run: openssl rand -base64 32
JWT_SECRET=your-super-secret-key-change-this-in-production

# Frontend URLs
# For development, use localhost
FRONTEND_URL=http://localhost:5173
# For production, use your Vercel deployment URL
# FRONTEND_URL=https://your-app.vercel.app

# Frontend Menu URL - This is where QR codes will redirect users to
FRONTEND_MENU_URL=http://localhost:5173/menu
# FRONTEND_MENU_URL=https://your-app.vercel.app/menu

# Supabase Storage Configuration
# Get these from Supabase Project Settings â†’ API
SUPABASE_URL=https://xxxxx.supabase.co
# IMPORTANT: Use the service_role key (not the anon public key!)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# =============================================
# PAYMENT GATEWAY CREDENTIALS (Sprint 3)
# =============================================

# ðŸ§ª TEST MODE: Set to 'true' to bypass real gateway API calls
# Use this when you don't have sandbox credentials
PAYMENT_TEST_MODE=true

# MoMo Payment Gateway
# Sign up at: https://business.momo.vn/
# Leave empty if using TEST_MODE
MOMO_PARTNER_CODE=your_partner_code
MOMO_ACCESS_KEY=your_access_key
MOMO_SECRET_KEY=your_secret_key
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create
MOMO_IPN_URL=https://your-backend-url.com/api/payments/momo/callback
MOMO_REDIRECT_URL=https://your-frontend-url.com/payment/result

# ZaloPay Gateway
# Sign up at: https://zalopay.vn/business
ZALOPAY_APP_ID=your_app_id
ZALOPAY_KEY1=your_key1
ZALOPAY_KEY2=your_key2
ZALOPAY_ENDPOINT=https://sb-openapi.zalopay.vn/v2/create
ZALOPAY_CALLBACK_URL=https://your-backend-url.com/api/payments/zalopay/callback

# VNPay Gateway
# Sign up at: https://vnpay.vn/
VNPAY_TMN_CODE=your_terminal_code
VNPAY_HASH_SECRET=your_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=https://your-frontend-url.com/payment/result
VNPAY_IPN_URL=https://your-backend-url.com/api/payments/vnpay/ipn

